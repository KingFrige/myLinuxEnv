#%Module -*- tcl -*-

conflict        riscv_toolchain/freedomstudio-version
conflict        riscv_toolchain/rockt-tools
conflict        riscv_toolchain/gcc-master
conflict        riscv_toolchain/llvm
conflict        riscv_toolchain/chipyard
conflict        riscv_toolchain/riscv32i
conflict        riscv_toolchain/riscv32im
conflict        riscv_toolchain/riscv32ic
conflict        riscv_toolchain/riscv32imc

set             tool_home            /home/korben/tools/riscv/vortex
setenv          TOOLDIR              $tool_home

set             riscv_gcc_home       $tool_home/riscv-gnu-toolchain
setenv          RISCV                $riscv_gcc_home
setenv          RISCV_PATH           $riscv_gcc_home
setenv          RISCV_TOOLCHAIN_PATH $riscv_gcc_home

prepend-path    PATH                 $riscv_gcc_home/bin
prepend-path    LIBRARY_PATH         $riscv_gcc_home/lib
prepend-path    LD_LIBRARY_PATH      $riscv_gcc_home/lib
prepend-path    LD_INCLUDE_PATH      $riscv_gcc_home/include
prepend-path    MANPATH              $riscv_gcc_home/share/man

set             llvm_home            $tool_home/llvm-vortex
setenv          LLVM_HOME            $llvm_home
setenv          LLVM_PREFIX          $llvm_home

prepend-path    PATH                 $llvm_home/bin
prepend-path    LIBRARY_PATH         $llvm_home/lib
prepend-path    LD_LIBRARY_PATH      $llvm_home/lib
prepend-path    LD_INCLUDE_PATH      $llvm_home/include
prepend-path    MANPATH              $llvm_home/share/man

set             pocl_compiler_home   $tool_home/pocl/compiler
set             pocl_runtime_home    $tool_home/pocl/runtime
setenv          POCL_CC_PATH         $pocl_compiler_home
setenv          POCL_RT_PATH         $pocl_runtime_home

prepend-path    PATH                 $pocl_compiler_home/bin
prepend-path    LIBRARY_PATH         $pocl_compiler_home/lib
prepend-path    LD_LIBRARY_PATH      $pocl_compiler_home/lib
prepend-path    LD_INCLUDE_PATH      $pocl_compiler_home/include
prepend-path    MANPATH              $pocl_compiler_home/share/man
